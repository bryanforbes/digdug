{
	"compilerOptions": {
		"module": "umd",
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "./dist",
		"target": "ES5"
	},
	"files": [
		"./types/dojo2/dojo.d.ts"
	],
	"include": [
		"./types/**/*.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
